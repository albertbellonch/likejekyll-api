source 'https://rubygems.org'

# Rails
gem 'rails', '4.2.1'
gem 'rails-api'

# API
gem 'active_model_serializers'
gem 'responders'

# Database
gem 'mysql2'

## Groups

# Development
group :development do
  gem 'spring'
  gem 'thin'
end

# Test
group :test do
  gem 'rspec-rails'
  gem 'fuubar'
  gem 'factory_girl_rails'
  gem 'shoulda-matchers', github: 'thoughtbot/shoulda-matchers'
end
